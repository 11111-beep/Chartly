<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/macaron_yellow"/> <!-- 柔和奶黄色 -->
            <corners android:radius="12dp"/> <!-- 圆润边角 -->
            <stroke
                android:width="2dp"
                android:color="#FFF59D"/> <!-- 浅黄描边，增加立体感 -->
        </shape>
    </item>
    
    <!-- 装饰性圆点边框 -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFF59D" android:dashWidth="2dp" android:dashGap="2dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    
    <!-- 装饰性圆点 -->
    <item android:right="8dp" android:top="8dp" android:width="6dp" android:height="6dp" android:gravity="right|top">
        <shape android:shape="oval">
            <solid android:color="@color/macaron_pink"/>
        </shape>
    </item>
    
    <item android:left="8dp" android:bottom="8dp" android:width="6dp" android:height="6dp" android:gravity="left|bottom">
        <shape android:shape="oval">
            <solid android:color="@color/macaron_mint"/>
        </shape>
    </item>
</layer-list>