<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影效果 -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#9575CD" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- 按钮主体 -->
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/macaron_lavender"/>
                    <corners android:radius="20dp"/>
                    <stroke android:width="2dp" android:color="#9575CD"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/macaron_pink"/>
                    <corners android:radius="20dp"/>
                    <stroke android:width="2dp" android:color="#EC407A"/>
                </shape>
            </item>
        </selector>
    </item>
    
    <!-- 装饰性圆点 -->
    <item android:right="8dp" android:top="8dp" android:width="4dp" android:height="4dp" android:gravity="right|top">
        <shape android:shape="oval">
            <solid android:color="@color/macaron_yellow"/>
        </shape>
    </item>
    
    <item android:left="8dp" android:bottom="8dp" android:width="4dp" android:height="4dp" android:gravity="left|bottom">
        <shape android:shape="oval">
            <solid android:color="@color/macaron_mint"/>
        </shape>
    </item>
</layer-list>


