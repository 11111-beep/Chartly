<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 柔和的粉蓝渐变，打造柔软Q弹的感觉 -->
    <gradient
        android:type="linear"
        android:angle="45"
        android:startColor="#B7DDF4"
        android:endColor="#F2B6CB" />

    <!-- 更大的圆角，更Q更萌 -->
    <corners android:radius="24dp"/>

    <!-- 可爱的浅棕色描边，带点手绘感 -->
    <stroke
        android:width="1dp"
        android:color="#E28FC9" />

    <!-- 适当的内边距，让内容更舒适 -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp"/>
</shape>