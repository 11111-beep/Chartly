<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主渐变背景 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/macaron_pink"
                android:endColor="@color/macaron_mint"
                android:angle="45"/>
        </shape>
    </item>
    
    <!-- 装饰性波浪线 -->
    <item android:top="16dp" android:left="16dp" android:right="16dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFFFFF" android:dashWidth="8dp" android:dashGap="4dp"/>
        </shape>
    </item>
    
    <item android:bottom="16dp" android:left="16dp" android:right="16dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFFFFF" android:dashWidth="8dp" android:dashGap="4dp"/>
        </shape>
    </item>
    
    <!-- 装饰性圆点 -->
    <item android:right="24dp" android:top="24dp" android:width="8dp" android:height="8dp" android:gravity="right|top">
        <shape android:shape="oval">
            <solid android:color="@color/macaron_yellow"/>
        </shape>
    </item>
    
    <item android:left="24dp" android:bottom="24dp" android:width="8dp" android:height="8dp" android:gravity="left|bottom">
        <shape android:shape="oval">
            <solid android:color="@color/macaron_blue"/>
        </shape>
    </item>
</layer-list>
